<%= form_for @post, html: { id: :post_form}, remote: true do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= label_tag :question %><br>
  <%= text_field_tag :question, params[:question] %><br>
  <%= label_tag :question_2 %><br>
  <%= text_field_tag :question_2, params[:question_2] %><br>
  <%= f.hidden_field(:user_id, :value => 1)%>
  <%= f.submit %>
<% end %>
